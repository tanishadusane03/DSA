class Complete {

    // Function for finding maximum and value pair
    public static int search(int arr[], int n, int x, int k) {
        int startfrom=x-k;
        int i=0;
        
        
        while(i<n && arr[i]!=x){
            if(i==n-1){
                break;
            }
            i++;
        }
        
        if(arr[i]!=x){
            return -1;
        }
        else{
            return i;
        }
    }
}
