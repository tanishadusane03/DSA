class GfG {
    public Stack<Integer> sort(Stack<Integer> s) {
        if (s.isEmpty()) {
            return s;
        }

        int temp = s.pop();
        sort(s);

        insertatrightpost(s, temp);
        return s;
    }

    void insertatrightpost(Stack<Integer> st, int temp) {
        if (st.isEmpty() || st.peek() < temp) {
            st.push(temp);
            return;
        }
        int ele = st.pop();
        insertatrightpost(st, temp);

        st.push(ele);
    }
}
